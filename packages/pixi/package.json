{
  "name": "@0g/pixi",
  "version": "0.0.1",
  "description": "pixi plugin for 0g",
  "files": [
    "dist",
    "dist-esm"
  ],
  "main": "./dist/index.js",
  "module": "./dist-esm/index.js",
  "typings": "./dist-esm/index.d.ts",
  "author": "Grant Forrest <gaforres@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch --bail",
    "build:cjs": "tsc",
    "build:esm": "tsc -m es6 --outDir dist-esm",
    "build": "concurrently \"npm run build:cjs\" \"npm run build:esm\"",
    "watch:cjs": "tsc --watch",
    "watch:esm": "tsc -m es6 --outDir dist-esm --watch",
    "watch": "concurrently \"npm run watch:cjs\" \"npm run watch:esm\"",
    "prepublishOnly": "npm run build:cjs && npm run build:esm",
    "release": "npm publish --access public"
  },
  "peerDependencies": {
    "0g": "link:../0g",
    "react": "^17.0.0"
  },
  "dependencies": {
    "pixi.js": "^5.3.3",
    "use-asset": "^0.2.0"
  },
  "devDependencies": {
    "@types/react": "^17.0.0",
    "concurrently": "^5.3.0",
    "react": "^17.0.0"
  }
}
